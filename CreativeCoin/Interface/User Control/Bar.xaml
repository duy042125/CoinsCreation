<UserControl x:Class="Interface.Bar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface"
             mc:Ignorable="d" 
             d:DesignHeight="575" d:DesignWidth="100">
    <Grid>
        <Rectangle x:Name="ColumnBorder" HorizontalAlignment="Center" Height="0" Width="100" Stroke="LightCoral" StrokeThickness="2" VerticalAlignment="Bottom" Margin="0,0,0,75" MouseLeftButtonDown="Bar_Click" Opacity="0.75"/>
            <Rectangle x:Name="ColumnInside" HorizontalAlignment="Center" Height="0" Width="96" Fill="LightCoral" StrokeThickness="2" VerticalAlignment="Bottom" Margin="0,0,0,77" MouseLeftButtonDown="Bar_Click" MouseEnter="Bar_MouseEnter" MouseLeave="Bar_MouseLeave"/>
        <Label x:Name="Label" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="50" Width="100" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseLeftButtonDown="Bar_Click"/>
    </Grid>
</UserControl>
