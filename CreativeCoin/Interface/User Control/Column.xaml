<UserControl x:Class="Interface.User_Control.Column"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="100">
    <Grid>
        <Rectangle x:Name="Bar" HorizontalAlignment="Center" Height="500" Width="100" Stroke="Black" VerticalAlignment="Bottom" Margin="0,0,0,100" />
        <Label x:Name="Label" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="50" Width="100" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
