<Window x:Class="Interface.ChartReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="ChartReport" Height="900" Width="1600">
    <Grid Background="LightBlue">
        <Label Content="Progress Bar Chart" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <local:BarChart x:Name="BarGraph" HorizontalAlignment="Left" VerticalAlignment="Top" Height="700" Width="950" Margin="0,170,0,0"/>
        

    </Grid>
</Window>
